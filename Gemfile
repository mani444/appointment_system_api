# Simplified Rails API Gemfile
source "https://rubygems.org"

# Core Rails
gem "rails", "~> 8.0.2"

# Database
gem "pg", "~> 1.1"

# Web Server
gem "puma", ">= 5.0"

# Performance
gem "bootsnap", require: false

# CORS for API
gem "rack-cors"

# HTTP Client
gem "faraday"

group :development, :test do
  gem "debug", platforms: %i[ mri windows ]
  gem "dotenv-rails"
end